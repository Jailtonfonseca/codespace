{
  "manifest_version": 3,
  "name": "Codespace Viewer",
  "version": "1.0.0",
  "description": "Visualize GitHub Codespaces screen in Chrome extension with zoom support.",
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://*.app.github.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Codespace"
  },
  "background": {
    "service_worker": "background.js"
  }
}